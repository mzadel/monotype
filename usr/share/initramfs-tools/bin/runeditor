#!/bin/sh

while true ; do
 /bin/rnano -o /mnt/text /mnt/text/text.txt

 echo
 echo Done writing!  Press enter to re-launch text editor,
 echo or type the word "done" and press enter to reboot.
 echo

 # get user input, to give them a chance to break out of this loop
 read s
 if [ -n $s ] ; then exit 0 ; fi

done
